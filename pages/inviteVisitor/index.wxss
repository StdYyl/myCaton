}
.keeps{
  border-bottom: 25rpx solid #f2F2F2;
}
.animation_come{
  animation: animation_come 1s;
}
@keyframes animation_come{
  from{
    transform: translateY(-100%);
  }
  to{
    transform: translateY(0);
  }
}
.animation_out{
  animation: animation_out 1s;
}
@keyframes animation_out{
  from{
    transform: translateY(0);
  }
  to{
    transform: translateY(-130%)
  }
}

.myCanvas{
  position: fixed;
  bottom: 99999rpx;
  z-index: -999999;
}