input{
  direction: rtl;
  text-align: right;
}

.invitation_page{
  border-top: 2rpx solid rgba(221, 221, 221, 1);
  padding: 0 24rpx;
}

.invitation_container{
  display: flex;
  display:-webkit-box;
  display:-webkit-flex;
  flex-direction: column;
}

.info_item{
  padding:0 0 0 12rpx;
  border-bottom: 2rpx solid rgba(221, 221, 221, 1);
  display: flex;
  display:-webkit-box;
  display:-webkit-flex;
  align-items: center;
  -webkit-box-align:center;
  -webkit-align-items:center;
}

.header{
  padding: 28rpx 0;
  width: 160rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  color: rgba(51, 51, 51, 1);
}

.value{
  flex: 1;
  font-size: 26rpx;
  line-height: 38rpx;
}

.select{
  font-size: 26rpx;
  line-height: 38rpx;
  color: rgba(187, 187, 187, 1);
}

.placeholder_style{
  color: rgba(187, 187, 187, 1);
}

picker{
  display: flex;
  flex: 1;
  justify-content: flex-end;
}

.select_wrapper{
  display: flex;
  align-items: center;
}

.textarea_container{
  padding: 40rpx 0 0 0;
}

.place_area{
  font-size: 24rpx;
  line-height: 34rpx;
  color: #BBBBBB;
  vertical-align: top;
}

.textarea_header{
  padding: 0 0 12rpx 12rpx;
  display: flex;
  flex: 1;
}

.area{
  border: 2rpx solid rgba(221, 221, 221, 1);
  border-radius: 6rpx;
  height: 160rpx;
  font-size: 24rpx;
  line-height: 34rpx;
  padding: 24rpx;
  width: 652rpx;
}

.generateCode{
  margin: 64rpx 40rpx 0 40rpx;
  background: #3E84FF;
  border-radius: 48rpx;
  padding: 20rpx 202rpx;
  font-size: 38rpx;
  line-height: 54rpx;
  color: #FFFFFF;
  font-weight: 300;
}

