/* pages/register.wxss */

.top-line {
  height: 3rpx;
  border-top: 1rpx solid rgba(221, 221, 221, 1);
}

.content {
  padding: 0 24rpx;
}

.take-photo {
  height: 350rpx;
  background: rgba(245, 245, 245, 1);
  border-radius: 10rpx;
  margin: 35rpx 0 0 0;
  display: flex;
  align-items: center;
}

.icon-shao {
  text-align: center;
}

.icon-shao image {
  width: 200rpx;
  height: 200rpx;
}

.icon-title {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(62, 132, 255, 1);
  text-align: center;
}

.item-input {
}

.input-content {
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  padding: 32rpx 0rpx 32rpx 12rpx;
  border-bottom: 1px solid rgba(221, 221, 221, 1);
}

.content-title {
  display: flex;
  align-items: center;
}

.content-input {
  flex: 1;
  text-align: right;
}

.verification {
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: flex-end;
}

button::after {
  border: none;
}

.verification-button {
  width: 150rpx;
  height: 60rpx;
  padding: 0rpx;
  line-height: 60rpx;
  margin-right: 7rpx;
  border-radius: 5rpx;
  border: 1px solid rgba(62, 132, 255, 1);
  font-size: 24rpx;
  background: white;
  color: rgba(62, 132, 255, 1);
}

.province {
}

.province-content {
  height: 52rpx;
  line-height: 52rpx;
  margin-left: 5rpx;
  padding: 4rpx 27rpx;
  text-align: center;
  font-weight: 800;
  color: rgba(62, 132, 255, 1);
  font-size: 32rpx;
  border-radius: 5rpx;
  border: 2rpx solid rgba(62, 132, 255, 1);
}

.register {
  padding: 64rpx 16rpx 0rpx;
}

.register-button {
  flex: 1;
  height: 92rpx;
  background: rgba(62, 132, 255, 1);
  box-shadow: 0rpx 7rpx 10rpx 0rpx rgba(62, 132, 255, 0.4);
  border-radius: 48rpx;
  color: rgba(255, 255, 255, 1);
  font-size: 38rpx;
  line-height: 92rpx;
}


.darkBackground{
  background: #eee;
}