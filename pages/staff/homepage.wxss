.mine_hd{
  background-color: #F5F5F5;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 41rpx 0 37rpx 0;
}
.mine_hd image{
  width: 126rpx;
  /* height: 126rpx; */
  border-radius: 50%;
}
.visitor_name{
  font-size: 30rpx;
  color: #666666;
  padding-top: 17rpx;
}
.fuc{
  padding: 31rpx 0 24rpx 0;
  margin: 0 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #EEEEEE;
  color: #333333;
  font-size: 30rpx;
}
