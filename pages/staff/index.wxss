.invite_container{
  padding: 64rpx 200rpx 54rpx 200rpx;
}

.invitation{
  padding: 21rpx 74rpx 21rpx 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(62, 132, 255, 1);
  border-radius: 46rpx;
}

.invitation image{
  width: 44rpx;
}

.invitation_text{
  font-size: 30rpx;
  line-height: 42rpx;
  color: rgba(255, 255, 255, 1);
  /* margin-left: 20rpx; */
}

.plus {
  position: relative;
  width: 20rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  right: 11rpx;
  bottom: 6rpx;
}

.plus:after, .plus:before {
  position: absolute;
  left: 50%;
  top: 50%;
  content: "";
  display: block;
  width: 16rpx;
  height: 2rpx;
  margin: -1rpx 0 0 -7rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 2rpx;
}

.plus:before {
  width: 2rpx;
  height: 16rpx;
  margin: -7rpx 0 0 0;
  border-radius: 2rpx;
}

.visit_container{
  padding: 26rpx;
}

.visit_title{
  font-size: 32rpx;
  line-height: 46rpx;
  color: rgba(51, 51, 51, 1);
  margin-bottom: 38rpx;
  font-weight: 600;
}

.visit_operation{
  /* display: flex;
