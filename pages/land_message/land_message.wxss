.body{
  margin: 40rpx 40rpx 0;
  position: relative;
}
.body image{
  width: 100%;
}
.mes{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.mes_bd{
  position: absolute;
  top:68rpx;
  left: 0;
  right: 0;
  text-align: center;
}
.title{
  font-size: 36rpx;
  font-weight: bold;
  line-height: 47rpx;
}
.inviter{
  color:#333333;
  font-size: 32rpx;
  padding-bottom: 14rpx;
  line-height: 47rpx;
}
.mes{
  color: #666666;
  font-size: 26rpx;
  padding-bottom: 5rpx;
}
.pc{
  width: 200rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #F5F5F5;
  border: 1rpx solid #EEEEEE;
  margin: 70rpx 0 49rpx 0;
  color: #3E84FF;
  font-size: 24rpx;
}
.pc image{
  padding-bottom: 25rpx;
  width: 42rpx;
  height: 34rpx;
}
.invited{
  display: flex;
  justify-content: center;
  padding-top: 41rpx;
}
.enter_dashed{
  height: 1rpx;
  width: 360rpx;
  margin: 0 auto;
  border-top: 1rpx dashed  rgba(204,204,204,.5);
}
.mes_left{
  text-align: right; 
}
.mes_left view{
  color: #999999;
  font-size: 30rpx;
  padding-bottom: 20rpx;
}
.mes_right{
  text-align: left; 
}
.mes_right view{
  color: #333333;
  font-size: 30rpx;
  padding-bottom: 20rpx;
}
.sure{
  background-color: #3E84FF;
  color: white;
  font-size: 38rpx;
  text-align: center;
  flex: 1;
  padding: 20rpx 0;
  border-radius: 48rpx;
  margin-top: 45rpx;
}
